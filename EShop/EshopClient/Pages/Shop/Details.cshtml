@page
@model EshopClient.Pages.Shop.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-6">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.UnitPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.UnitPrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.ManufacturerName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.ManufacturerName)
            </dd>
        </dl>
    </div>
    <div class="col-6">
        <img src="@Model.Product.ImageUrl" width="250"/><br />
        <form method="post" data-ajax="true" data-ajax- data-ajax-method="post" data-ajax-url="/Shop/Cart?handler=add">
            <input type="hidden" name="ProductId" value="@Model.Product.ProductId" />
            <button class="btn" type="submit"><i class="fas fa-cart-arrow-down"></i></button>
        </form>
    </div>
</div>